<a href="/admin/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2>
    <form action="/admin/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn btn--danger">
    </form>
</div>
<form action="/admin/edit-post/<%= data._id %>?_method=PUT" method="POST">
    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Enter Title" name="title" value="<%= data.title %>">

    <label for="body"><b>Content</b></label>
    <textarea placeholder="Enter body" name="body" rows="10" cols="30"><%= data.body %></textarea>
    
    <input type="submit" value="Update" class="btn">
</form>